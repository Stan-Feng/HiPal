<?xml version="1.0" encoding="utf-8"?>
<!--Created by Anan Wang-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#6ab8ef"
        android:id="@+id/cancel"
        android:text="Cancel"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="18sp"
        android:text="  Old Password "
        android:background="@color/colorW"
        android:textColor="#202020"
        android:id="@+id/nick2"
        android:layout_below="@+id/cancel"
        android:layout_marginTop="15dp" />


    <EditText
        android:id="@+id/tip1"
        android:background="#d0e8f9"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:inputType="text"
        android:imeOptions="actionNone"
        android:layout_alignTop="@+id/nick2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="18sp"
        android:text="  New Password"
        android:background="#fff"
        android:textColor="#202020"
        android:id="@+id/signature2"
        android:layout_below="@+id/tip1"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/tip2"
        android:background="#d0e8f9"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:inputType="text"
        android:imeOptions="actionNone"
        android:layout_alignTop="@+id/signature2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="18sp"
        android:text="  Verify"
        android:background="#fff"
        android:textColor="#202020"
        android:id="@+id/region"
        android:layout_below="@+id/signature2"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/tip3"
        android:background="#d0e8f9"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:inputType="text"
        android:imeOptions="actionNone"
        android:layout_alignTop="@+id/region"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Passwords"
        android:id="@+id/button2"
        android:background="@color/colorButtonBackground2"
        android:textColor="@color/colorW"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/region"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />



</RelativeLayout>