<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    android:id="@+id/fragment_security"
    tools:context="app.android.stanfeng.com.hipal.SecurityFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#6ab8ef"
            android:id="@+id/cancel"
            android:text="Cancel"
            android:layout_marginTop="15dp"
            android:background="#fff"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textColor="#6ab8ef"
            android:background="#fff"
            android:layout_below="@+id/cancel"
            android:layout_marginTop="15dp"
            android:id="@+id/changePassword" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy"
            android:textColor="#6ab8ef"
            android:id="@+id/privacy"
            android:background="#fff"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/changePassword"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textColor="#fff"
            android:background="#58b8fc"
            android:layout_marginTop="15dp"
            android:id="@+id/logOut"
            android:layout_below="@+id/privacy"/>
    </RelativeLayout>

</LinearLayout>
