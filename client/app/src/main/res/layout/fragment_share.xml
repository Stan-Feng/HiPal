<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareFragment"
    android:background="#eee">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/shareCity"
    android:layout_marginTop="15dp"
    android:background="@color/colorButtonBackground1">
    <TextView
        android:id="@+id/city"
        android:text="     Select A City"
        android:textSize="20dp"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/colorW"
        android:textColor="@color/colorButtonText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@color/colorButtonBackground2"
        android:layout_alignTop="@+id/city"
        android:layout_marginRight="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/city" />

</RelativeLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textColor="@color/colorButtonText"
        android:background="#eee"
        android:text="SuZhou"
        android:lineSpacingExtra="15dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_below="@+id/shareCity"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/ListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="10"
        android:background="@color/colorW"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" >

    </ListView>


</RelativeLayout>
