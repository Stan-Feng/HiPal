<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_main"
    android:background="@drawable/minionsc"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00eeeeee"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#d0e8f9"
            android:id="@+id/blue"
            android:layout_marginTop="15dp"
            android:text=" "
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#98d0e8f9"
            android:id="@+id/firstLine"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            >

            <ImageView
                android:id="@+id/profilePhoto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/niuniu_duanwu"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/profilePhoto"
                android:layout_toRightOf="@+id/profilePhoto"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:textSize="25sp"
                android:textColor="#202020"
                android:text="name"
                />

            <TextView
                android:id="@+id/signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="name"
                android:layout_below="@+id/nickname"
                android:layout_alignStart="@+id/nickname"
                android:layout_alignLeft="@+id/nickname"/>



        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jump1"
            android:background="#7affffff"
            android:textColor="#038cec"
            android:layout_marginTop="15dp"

            android:text="My Future Travel Plan"
            android:layout_below="@+id/blue"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jump2"
            android:background="#7affffff"
            android:text="My Past Travel Plan"
            android:textColor="#0192f9"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/jump1"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jump3"
            android:background="#76ffffff"
            android:textColor="#0391f5"
            android:layout_marginTop="15dp"
            android:text=" My Security"
            android:layout_below="@+id/jump2"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile"
            android:text="Personal Information Management"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:background="#8958b8fc"
            android:layout_below="@+id/jump3"
            android:layout_centerHorizontal="true"
            />


    </RelativeLayout>




</RelativeLayout>