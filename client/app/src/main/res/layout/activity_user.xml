<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:id="@+id/user_layout"
    tools:context="app.android.stanfeng.com.hipal.UserActivity"
    android:background="#eee">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#6ab8ef"
            android:id="@+id/cancel"
            android:text="Cancel"
            android:layout_marginTop="15dp"
            android:background="#fff"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#d0e8f9"
            android:id="@+id/blue"
            android:layout_marginTop="15dp"
            android:text=" "
            android:layout_below="@+id/cancel"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d0e8f9"
            android:id="@+id/firstLine"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_alignTop="@+id/blue"
            android:layout_centerHorizontal="true"
            >

            <ImageView
                android:id="@+id/photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/niuniu_duanwu"
                android:layout_marginTop="0dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#020202"
                android:text="nick"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>
        <ListView
            android:id="@+id/listView3"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/blue"
            android:layout_marginTop="0dp"
            android:background="@color/colorButtonBackground1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </ListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/listView3"
            android:text="                   Future Travel Plan"
            android:id="@+id/future"
            android:textSize="20sp"
            android:textColor="@color/colorW"
            android:background="@color/colorButtonBackground2"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/blank1"
            android:background="@color/colorW"
            android:layout_below="@+id/future"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_below="@+id/blank1"
            android:background="@color/colorW"
            android:id="@+id/listView4">

        </ListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/listView4"
            android:text="                     Past Travel Plan"
            android:id="@+id/past"
            android:textSize="20sp"
            android:textColor="@color/colorW"
            android:background="@color/colorButtonBackground2"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/blank2"
            android:background="@color/colorW"
            android:layout_below="@+id/past"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/blank2"
            android:background="@color/colorW"
            android:id="@+id/listView5">

        </ListView>

    </RelativeLayout>

</ScrollView>

</RelativeLayout>

