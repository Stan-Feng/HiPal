<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:id="@+id/fragment_edit_profile"
    android:orientation="vertical"

    >
    android:background="#eee">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#6ab8ef"
        android:id="@+id/cancel"
        android:text="Cancel"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="18dp"
        android:text="Nickname"
        android:background="#fff"
        android:textColor="#202020"
        android:id="@+id/nick2"
        android:layout_below="@+id/cancel"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/tip1"
        android:background="#d0e8f9"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:inputType="text"
        android:imeOptions="actionNone"
        android:layout_alignTop="@+id/nick2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="18dp"
        android:text="Signature"
        android:background="#fff"
        android:textColor="#202020"
        android:id="@+id/signature2"
        android:layout_below="@+id/tip1"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/tip2"
        android:background="#d0e8f9"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:inputType="text"
        android:imeOptions="actionNone"
        android:layout_alignTop="@+id/signature2"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="18dp"
        android:text="Region"
        android:background="#fff"
        android:textColor="#202020"
        android:id="@+id/region"
        android:layout_below="@+id/signature2"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/tip3"
        android:background="#d0e8f9"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:inputType="text"
        android:imeOptions="actionNone"
        android:layout_alignTop="@+id/region"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="18dp"
        android:text="Gender"
        android:background="#fff"
        android:textColor="#202020"
        android:id="@+id/gender"
        android:layout_below="@+id/region"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/tip4"
        android:background="#d0e8f9"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:inputType="text"
        android:imeOptions="actionNone"
        android:layout_alignTop="@+id/gender"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/saveChange"
        android:text="Save Change"
        android:layout_marginTop="15dp"
        android:textColor="#fff"
        android:background="#58b8fc"
        android:layout_below="@+id/gender"
        />

</RelativeLayout>

